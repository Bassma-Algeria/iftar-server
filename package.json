{
  "name": "iftar-server",
  "version": "1.0.0",
  "description": "the REST server of iftar app",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index",
    "dev": "nodemon src/index",
    "start:prod": "node dist/src/index",
    "build": "tsc -p .",
    "test:acceptance": "mocha -r ts-node/register 'tests/UseCases/**/*.test.ts'",
    "test:domain": "mocha -r ts-node/register 'tests/Domain/**/*.test.ts'",
    "test:contract": "mocha -r ts-node/register 'tests/Adapters/**/*.test.ts'",
    "test:infrastructure": "mocha -r ts-node/register --timeout 5000 'tests/infrastructure/**/*.test.ts'",
    "test:e2e": "cross-env NODE_ENV=TEST_E2E mocha -r ts-node/register  --timeout 10000 'tests/e2e/**/*.test.ts'",
    "test": "npm run test:domain && npm run test:contract && npm run test:acceptance && npm run test:infrastructure && npm run test:e2e"
  },
  "mocha": {
    "env": "dotenv_config_path=./.env.test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bassma-Algeria/Iftar-app.git"
  },
  "keywords": [
    "api",
    "rest",
    "mocha",
    "typescript",
    "iftar"
  ],
  "author": "Bassma",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bassma-Algeria/Iftar-app/issues"
  },
  "homepage": "https://github.com/Bassma-Algeria/Iftar-app#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "cloudinary": "^1.29.0",
    "cors": "^2.8.5",
    "deep-equal-in-any-order": "^1.1.15",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^9.2.2",
    "mongoose": "^6.2.9",
    "morgan": "^1.10.0",
    "ts-node": "^10.7.0",
    "uuid": "^8.3.2",
    "faker": "^5.5.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cors": "^2.8.12",
    "@types/deep-equal-in-any-order": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.0",
    "@types/morgan": "^1.9.3",
    "@types/sinon": "^10.0.11",
    "@types/uuid": "^8.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-exclude": "^2.1.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.15",
    "sinon": "^13.0.1",
    "typescript": "^4.6.2"
  }
}
